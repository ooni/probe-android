<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:keepScreenOn="true"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageButton
			android:id="@+id/close"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end|bottom"
			android:layout_alignParentEnd="true"
			android:layout_margin="8dp"
			android:minWidth="0dp"
			android:src="@drawable/close"
			android:tint="@android:color/white" />

		<TextView
			android:id="@+id/running"
			style="@style/TextAppearance.AppCompat.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="?attr/actionBarSize"
			android:gravity="center_horizontal"
			android:text="@string/Dashboard_Running_Running"
			android:textStyle="bold" />
	</RelativeLayout>

	<TextView
		android:id="@+id/name"
		style="@style/TextAppearance.AppCompat.Large"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="32dp"
		android:gravity="center_horizontal"
		android:text="@string/Dashboard_Running_PreparingTest" />

	<com.airbnb.lottie.LottieAnimationView
		android:id="@+id/animation"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />

	<ProgressBar
		android:id="@+id/progress"
		style="@style/Widget.AppCompat.ProgressBar.Horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="32dp"
		android:layout_marginBottom="?attr/actionBarSize"
		android:progressDrawable="@drawable/progress"
		android:indeterminateTint="@android:color/white" />

	<TextView
		android:id="@+id/Dashboard_Running_EstimatedTimeLeft"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="@string/Dashboard_Running_EstimatedTimeLeft" />

	<TextView
		android:id="@+id/eta"
		style="@style/TextAppearance.AppCompat.Large"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/log"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="32dp"
		android:layout_marginVertical="?attr/actionBarSize"
		android:ellipsize="end"
		android:gravity="center_horizontal"
		android:maxLines="1" />
</LinearLayout>